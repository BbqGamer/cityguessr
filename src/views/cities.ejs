<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cityguessr</title>
    <link rel="stylesheet" href="/css/base.css">
</head>

<body>
    <%- include('components/header') %>
    <form action="/cities" method="POST">
        <input type="text" name="query" placeholder="Natural language query">
        <input type="number" name="n_results", min="1", max="20" value="8" style="width: 50px;">
        <button type="submit">Search</button>
    </form>
    <button onclick="window.location.href='/cities?clear=1'">Reset</button>
    <%- include('components/city-list') %>
    <ul class="pagination">
        <% if (totalPages > 1) { %>
            <% for (let i=1; i <=totalPages; i++) { %>
                <button onclick="window.location.href='/cities?page=<%= i %>'">
                    <%= i %>
                </button>
            <% } %>
        <% } %>
    </ul>
</body>
<style>
    .pagination {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        margin: 0;
        padding: 0;
    }

    button {
        margin: 2px;
        font-size: 20px;
        width: 40px;
        height: 40px;
        text-align: center;
    }

    form {
        margin: 15px;
        vertical-align: middle;
    }

    form button {
        margin: 0;
        width: 100px;
        height: 30px;
        font-size: 15px;
    }
    
    input {
        width: 500px;
        height: 30px;
    }
</style>

</html>