<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cityguessr</title>
    <link rel="stylesheet" href="/css/base.css">
</head>

<body>
    <%- include('components/header') %>
    <%- include('components/city-list') %>
    <ul class="pagination">
        <% for (let i=1; i <=totalPages; i++) { %>
            <button onclick="window.location.href='/cities?page=<%= i %>'">
                <%= i %>
            </button>
        <% } %>
    </ul>
</body>
<style>
    .pagination {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        margin: 0;
        padding: 0;
    }

    button {
        margin: 2px;
        font-size: 20px;
        width: 40px;
        height: 40px;
        text-align: center;
    }
</style>

</html>