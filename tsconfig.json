{
    "compilerOptions": {
        "target": "ES2022",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "useUnknownInCatchVariables": false
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.ejs",
        "../config.json"
    ],
    "exclude": [
        "node_modules"
    ]
}